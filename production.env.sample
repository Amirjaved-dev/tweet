# Application
NODE_ENV=production
PORT=3000
BASE_URL=https://your-production-domain.com

# Clerk Authentication
VITE_CLERK_PUBLISHABLE_KEY=pk_live_your_production_key
CLERK_SECRET_KEY=sk_live_your_production_key
VITE_CLERK_SIGN_IN_URL=/sign-in
VITE_CLERK_SIGN_UP_URL=/sign-up
VITE_CLERK_AFTER_SIGN_IN_URL=/dashboard
VITE_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Supabase Configuration
VITE_SUPABASE_URL=https://your-production-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_production_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key

# Database URL (if not using Supabase)
DATABASE_URL=postgresql://username:password@production-host:5432/threadflowpro_production

# Coinbase Commerce
COINBASE_API_KEY=your_production_coinbase_api_key
COINBASE_COMMERCE_API_KEY=your_production_coinbase_api_key
COINBASE_COMMERCE_WEBHOOK_SECRET=your_production_coinbase_webhook_secret
COINBASE_WEBHOOK_SECRET=your_production_coinbase_webhook_secret

# Session Configuration
SESSION_SECRET=generate_a_long_random_string_for_production

# OpenRouter API (for thread generation)
OPENROUTER_API_KEY=your_production_openrouter_api_key

# Thread Generation Limits
DAILY_THREAD_LIMIT_FREE=3
DAILY_THREAD_LIMIT_PRO=30

# AI Model Configuration
AI_MODEL=google/gemini-flash-1.5-8b
FALLBACK_AI_MODEL=anthropic/claude-3-haiku-20240307

# Plan Configuration
PREMIUM_PLAN_PRICE=9.99
PRO_PLAN_MONTHLY_PRICE=9.99
PRO_PLAN_YEARLY_PRICE=99.99
ENTERPRISE_PLAN_PRICE=29.99
PRO_PLAN_CURRENCY=USD

# PostgreSQL Configuration for Docker Compose
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_production_password
POSTGRES_DB=threadflowpro_production
PGADMIN_DEFAULT_EMAIL=admin@yourcompany.com
PGADMIN_DEFAULT_PASSWORD=secure_admin_password 